GOPATH=$(shell pwd)/vendor:$(shell pwd)
GOBIN=$(shell pwd)/bin
GOFILES=$(wildcard *.go)
GONAME=$(shell basename "$(PWD)")
PID=/tmp/go-$(GONAME).pid

all: default

default:
	@echo "\n  ðŸ£  {hek:title} API server\n"
	@$(MAKE) watch

build:
	@echo "  ðŸ›   Building $(GOFILES) to ./bin"
	@GOPATH=$(GOPATH) GOBIN=$(GOBIN) go build -o bin/$(GONAME) $(GOFILES)

get:
	@echo "  ðŸ”„  Please wait while I'm getting dependencies of {hek:title} for you."
	@GOPATH=$(GOPATH) GOBIN=$(GOBIN) go get .

install:
	@GOPATH=$(GOPATH) GOBIN=$(GOBIN) go install $(GOFILES)

run:
	@GOPATH=$(GOPATH) GOBIN=$(GOBIN) go run $(GOFILES)

watch: restart
	@echo "  ðŸ‘“  Watching for changes..."
	@fswatch -o *.go src/**/*.go | xargs -n1 -I{}  make restart || make stop

restart: stop clean build start

start:
	@echo "  â–¶ï¸  Starting bin/$(GONAME)"
	@./bin/$(GONAME) & echo $$! > $(PID)

stop:
	@echo "  â¹  Stopping bin/$(GONAME)"
	@-touch $(PID)
	@-kill `cat $(PID)` 2> /dev/null || true

clean:
	@echo "  ðŸš¿  Cleaning"
	@GOPATH=$(GOPATH) GOBIN=$(GOBIN) go clean

.PHONY: build get install run watch start stop restart clean
